@model FreteFree.Models.Motorista.OrdemCarregamento

@{
    ViewData["Title"] = "Details";
}

<style>
    .container {
        position: center
    }
</style>



<h3>Apresentara todos os dados relacionados para a impressao da ordem de carregamento + o recibo em um pag A4 a ser modelada ainda</h3>
<div class="container">

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Empresa)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Empresa.CidadeEmpresa)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Motorista)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Motorista.CaminhaoProprietario)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Medida)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Medida)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataOrdemCarregamento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataOrdemCarregamento)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.OrdemCarregamentoId">Editar</a> |

        <a asp-action="Index">Voltar</a>

        <input type="button" onclick="Save()" value="Recibo" />
        <input type="button" onclick="printPage()" value="Print" />

    </div>
</div>